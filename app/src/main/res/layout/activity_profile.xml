<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/leve"
    tools:context=".ProfileActivity">


    <TextView
        android:id="@+id/Name_id"
        android:layout_width="291dp"
        android:layout_height="40dp"
        android:layout_marginBottom="288dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="44dp"
        android:gravity="center"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/profile_pc"
        android:layout_width="110dp"
        android:layout_height="123dp"
        android:layout_marginEnd="148dp"
        android:layout_marginRight="148dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/pppp" />

    <TextView
        android:id="@+id/Followers_id"
        android:layout_width="63dp"
        android:layout_height="34dp"
        android:layout_marginBottom="208dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:text="@string/Followers"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Projects_id"
        android:layout_width="63dp"
        android:layout_height="34dp"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="44dp"
        android:textStyle="bold"
        android:text="@string/Projects"
        app:layout_constraintStart_toEndOf="@+id/Followers_id"
        app:layout_constraintTop_toBottomOf="@+id/Name_id" />

    <TextView
        android:id="@+id/Starts_id"
        android:layout_width="63dp"
        android:layout_height="34dp"
        android:layout_marginBottom="208dp"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:text="@string/Starts"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Projects_id" />




</android.support.constraint.ConstraintLayout>